{
  "name": "@eisberg-labs/ngx-size-me-project",
  "description": "Angular directive that makes your components aware of width, height and position with the help of element-resize-detector.",
  "version": "0.0.1",
  "workspaces": [
    "demo",
    "ngx-size-me"
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --no-watch --code-coverage",
    "lint": "ng lint",
    "postbuild": "cp README.md LICENSE CHANGELOG.md thumbnail.png dist/ngx-size-me",
    "prettier": "prettier -c ngx-size-me/src/**/*",
    "prettier:fix": "prettier --write ngx-size-me/src/**/*"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.1.1",
    "@angular/common": "^16.1.1",
    "@angular/compiler": "^16.1.1",
    "@angular/core": "^16.1.1",
    "@angular/platform-browser": "^16.1.1",
    "@angular/platform-browser-dynamic": "^16.1.1",
    "element-resize-detector": "^1.2.4",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1601.0",
    "@angular-devkit/build-angular": "^18.0.0",
    "@angular-eslint/builder": "16.0.3",
    "@angular-eslint/eslint-plugin": "16.0.3",
    "@angular-eslint/eslint-plugin-template": "16.0.3",
    "@angular-eslint/schematics": "16.0.3",
    "@angular-eslint/template-parser": "16.0.3",
    "@angular/cli": "~18.2.0",
    "@angular/compiler-cli": "^16.1.1",
    "@types/jasmine": "~4.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.39.0",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "ng-packagr": "^16.1.0",
    "prettier": "^2.8.3",
    "typescript": "~4.9.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
